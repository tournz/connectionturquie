            <%= cl_image_tag current_user.photo.key, height: 50, width: 50, crop: :fill, class: "avatar-bordered" %>
          <% end %>
        <% else %>
          <%= link_to "Inscription", new_user_registration_path, class: 'btn btn-light' %>
