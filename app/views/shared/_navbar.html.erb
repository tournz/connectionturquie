  <h4 class="nav-link">Connection Turquie</h4>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li>
        <% if user_signed_in? %>
          <%= link_to "Déconnexion", destroy_user_session_path, :method => :delete, class: 'btn btn-light ml-20' %>
